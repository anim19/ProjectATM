<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="izriva.as.beratbadan.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Cek Berat Bandan" />

            <TextView
                android:id="@+id/txtNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtView"
                android:layout_marginStart="12dp"
                android:text="Nama" />

            <EditText
                android:id="@+id/editNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtNama"
                android:layout_below="@+id/txtNama"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txtTinggi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editNama"
                android:layout_below="@+id/editNama"
                android:layout_marginTop="6dp"
                android:text="Tinggi" />

            <EditText
                android:id="@+id/editTinggi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editNama"
                android:layout_alignStart="@+id/txtTinggi"
                android:layout_below="@+id/txtTinggi"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txtBerat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editTinggi"
                android:layout_below="@+id/editTinggi"
                android:layout_marginTop="6dp"
                android:text="Berat Badan" />

            <EditText
                android:id="@+id/editBerat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtBerat"
                android:layout_below="@+id/txtBerat"
                android:layout_marginTop="7dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txtKelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editBerat"
                android:layout_below="@+id/editBerat"
                android:layout_marginTop="7dp"
                android:text="Jenis Kelamin" />

            <RadioGroup
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/txtKelamin"
                android:layout_below="@+id/txtKelamin"
                android:layout_marginTop="7dp">

                <RadioButton
                    android:id="@+id/radioLaki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Laki-Laki" />

                <RadioButton
                    android:id="@+id/radioWanita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Perempuan" />
            </RadioGroup>

            <Button
                android:id="@+id/btnCek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtKelamin"
                android:layout_below="@+id/txtKelamin"
                android:layout_marginTop="94dp"
                android:text="CEK IN" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btnCek"
                android:layout_alignBottom="@+id/btnCek"
                android:layout_alignEnd="@+id/txtView"
                android:text="Clear" />

            <Button
                android:id="@+id/btnExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/btnClear"
                android:text="Exit" />

            <TextView
                android:id="@+id/txtHasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnClear"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="Hasil Diagnosis" />

            <EditText
                android:id="@+id/edithasil1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtHasil"
                android:layout_marginTop="6dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editHasil2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edithasil1"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editHasil3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editHasil2"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
